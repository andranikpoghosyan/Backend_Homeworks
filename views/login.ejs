<!DOCTYPE html>
<html lang="en">
  <head>
    <meta charset="UTF-8" />
    <meta name="viewport" content="width=device-width, initial-scale=1.0" />
    <title>Login</title>
    <link rel="stylesheet" href="styleLogin.css" />
  </head>
  <body>
    <div class="row">
      <div class="col-md-6 col-md-offset-3">
        <form id="loginForm">
          <fieldset>
            <h2 class="fs-title">LOGIN PAGE</h2>

            <input
              type="text"
              required
              id="email"
              name="email"
              placeholder="Email"
            />
            <input
              type="password"
              required
              id="password"
              name="password"
              placeholder="Password"
            />
            <button
              type="submit"
              class="next action-button"
              value="submit"
              id="btn"
            >
              LogIn
            </button>
          </fieldset>
        </form>
      </div>
    </div>
    <script src="loginScript.js"></script>
  </body>
</html>
